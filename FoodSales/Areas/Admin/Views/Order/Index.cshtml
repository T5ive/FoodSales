@section Scripts{
    <script src="~/js/order.js"></script>
    <script type="text/javascript">
        function ImportFile() {
            $('#upload').click();
        }

        document.getElementById("upload").onchange = function () {
            document.getElementById("form").submit();
        };
    </script>
}